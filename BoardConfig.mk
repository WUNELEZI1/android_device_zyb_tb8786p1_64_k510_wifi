# tb8786p1_64_k510_wifi (MT6768) BoardConfig.mk
# 基于实际fastboot getvar all和解包镜像生成

DEVICE_PATH := device/zyb/tb8786p1_64_k510_wifi

ALLOW_MISSING_DEPENDENCIES := true
BUILD_BROKEN_DUP_RULES := true

# 平台配置（MT6768 Helio P65/G85）
TARGET_BOARD_PLATFORM := mt6768
BOARD_HAS_MTK_HARDWARE := true
MTK_PLATFORM := mt6768
TARGET_CPU_SMP := true
BOARD_HAS_NO_BLUETOOTH := true
BOARD_HAS_NO_MOBILE_DATA := true

# 架构配置（arm64-v8a）- 新增64位应用支持声明
TARGET_ARCH := arm64
TARGET_ARCH_VARIANT := armv8-a
TARGET_CPU_ABI := arm64-v8a
TARGET_CPU_VARIANT := cortex-a73
# 核心修复：声明64位设备支持64位应用（解决架构冲突）
TARGET_SUPPORTS_64_BIT_APPS := true
# 32位兼容配置
TARGET_2ND_ARCH := arm
TARGET_2ND_ARCH_VARIANT := armv8-a
TARGET_2ND_CPU_ABI := armeabi-v7a
TARGET_2ND_CPU_VARIANT := cortex-a53

# Bootloader配置（实际参数）
TARGET_BOOTLOADER_BOARD_NAME := tb8786p1_64_k510_wifi
TARGET_NO_BOOTLOADER := true
BOARD_BOOTLOADER_HEADER_VERSION := 4

# AB分区配置（实际AB分区，current-slot:b）
AB_OTA_UPDATER := true
BOARD_USES_VIRTUAL_AB := false
BOARD_BUILD_SYSTEM_ROOT_IMAGE := false
BOARD_FLASH_BLOCK_SIZE := 4096
TARGET_USES_MKE2FS := true

# 分区大小（严格使用fastboot getvar all的十六进制值）
BOARD_BOOTIMAGE_PARTITION_SIZE := 0x2000000      # 33554432字节
BOARD_VENDOR_BOOTIMAGE_PARTITION_SIZE := 0x4000000 # 67108864字节
BOARD_USERDATAIMAGE_PARTITION_SIZE := 0x37814F8000 # 238418575360字节
BOARD_SUPER_PARTITION_SIZE := 0x280000000         # 10737418240字节
BOARD_METADATAIMAGE_PARTITION_SIZE := 0x2000000   # 33554432字节
BOARD_DTBOIMG_PARTITION_SIZE := 0x800000          # 8388608字节
BOARD_INIT_BOOT_IMAGE_PARTITION_SIZE := 0x800000  # 8388608字节
BOARD_VBMETAIMAGE_PARTITION_SIZE := 0x800000      # 8388608字节

# 动态分区配置（实际参数）
BOARD_SUPER_PARTITION_GROUPS := zyb_dynamic_partitions
BOARD_ZYB_DYNAMIC_PARTITIONS_SIZE := 0x280000000
BOARD_ZYB_DYNAMIC_PARTITIONS_PARTITION_LIST := system vendor product system_ext
BOARD_BUILD_SUPER_IMAGE_BY_DEFAULT := true

# 内核配置（使用解包的实际文件）
TARGET_FORCE_PREBUILT_KERNEL := true
TARGET_PREBUILT_KERNEL := $(DEVICE_PATH)/prebuilt/Image.gz-dtb
TARGET_PREBUILT_DTB := $(DEVICE_PATH)/dtb/mt6768.dtb
BOARD_KERNEL_IMAGE_NAME := Image.gz-dtb
BOARD_INCLUDE_DTB_IN_BOOTIMG := true

# 内核参数（来自解包的vendor_boot.img）
BOARD_KERNEL_BASE := 0x40078000
BOARD_KERNEL_PAGESIZE := 4096
BOARD_KERNEL_OFFSET := 0x00008000
BOARD_RAMDISK_OFFSET := 0x11000000
BOARD_KERNEL_TAGS_OFFSET := 0x13f00000
BOARD_KERNEL_CMDLINE := bootopt=64S3,32N2,64N2 buildvariant=user androidboot.selinux=permissive
BOARD_MKBOOTIMG_ARGS := \
    --header_version 4 \
    --kernel_offset $(BOARD_KERNEL_OFFSET) \
    --ramdisk_offset $(BOARD_RAMDISK_OFFSET) \
    --tags_offset $(BOARD_KERNEL_TAGS_OFFSET) \
    --dtb $(TARGET_PREBUILT_DTB)

# 文件系统（实际配置）
BOARD_SYSTEMIMAGE_FILE_SYSTEM_TYPE := ext4
BOARD_VENDORIMAGE_FILE_SYSTEM_TYPE := ext4
BOARD_USERDATAIMAGE_FILE_SYSTEM_TYPE := f2fs
BOARD_PRODUCTIMAGE_FILE_SYSTEM_TYPE := ext4
BOARD_SYSTEM_EXTIMAGE_FILE_SYSTEM_TYPE := ext4
TARGET_USERIMAGES_USE_EXT4 := true
TARGET_USERIMAGES_USE_F2FS := true
TARGET_COPY_OUT_VENDOR := vendor
TARGET_COPY_OUT_PRODUCT := product
TARGET_COPY_OUT_SYSTEM_EXT := system_ext

# Recovery配置（适配无独立recovery分区）
TARGET_RECOVERY_PIXEL_FORMAT := RGBX_8888
TARGET_RECOVERY_FSTAB := $(DEVICE_PATH)/recovery.fstab
BOARD_USES_RECOVERY_AS_BOOT := true
BOARD_SUPPORTS_FLASH_FROM_STORAGE := true
RECOVERY_SDCARD_ON_DATA := true
BOARD_HAS_NO_SELECT_BUTTON := true

# TWRP核心配置（MT6768平板适配）
TW_THEME := portrait_hdpi
TW_EXTRA_LANGUAGES := true
TW_DEFAULT_LANGUAGE := zh_CN
TW_SCREEN_WIDTH := 1200
TW_SCREEN_HEIGHT := 1920
TW_ROTATE_SCREEN := false
TW_BRIGHTNESS_PATH := "/sys/class/leds/lcd-backlight/brightness"
TW_MAX_BRIGHTNESS := 255
TW_DEFAULT_BRIGHTNESS := 150
TW_MTK := true
TW_NO_REBOOT_BOOTLOADER := false
TW_INCLUDE_NV_DATA_BACKUP := true
TW_EXCLUDE_CELLULAR := true
TW_USE_TOOLBOX := true
TW_INCLUDE_REPACKTOOLS := true
TARGET_USES_LOGD := true
TWRP_INCLUDE_LOGCAT := true

# 安全补丁和版本（仅保留可配置项）
PLATFORM_SECURITY_PATCH := 2024-09-05
VENDOR_SECURITY_PATCH := 2024-09-05
PLATFORM_VERSION := 12.0.0
TARGET_BOOT_DEVICE := tb8786p1_64_k510_wifi

# 禁用AVB（设备已unlocked）
BOARD_AVB_ENABLE := false
BOARD_AVB_MAKE_VBMETA_IMAGE_ARGS += --flags 2

# SELinux配置
BOARD_SEPOLICY_DIRS := \
    $(DEVICE_PATH)/sepolicy \
    device/mediatek/sepolicy
SYSTEM_EXT_PUBLIC_SEPOLICY_DIRS := $(DEVICE_PATH)/sepolicy/public
SYSTEM_EXT_PRIVATE_SEPOLICY_DIRS := $(DEVICE_PATH)/sepolicy/private

# 修复只读变量冲突（仅初始化，不赋值）
PRODUCT_PROPERTY_OVERRIDES ?=

# 补充编译系统识别的屏幕参数（和TWRP配置对齐）
TARGET_SCREEN_WIDTH := $(TW_SCREEN_WIDTH)
TARGET_SCREEN_HEIGHT := $(TW_SCREEN_HEIGHT)

# 修复MTK设备TWRP编译的小兼容问题
TW_INCLUDE_RECOVERY_DTBO := true
BOARD_INCLUDE_DTB_IN_RECOVERY_IMAGE := true

# 新增：强制导出TWRP变量（最高优先级，解决编译识别问题）
TW_THEME := portrait_hdpi
TARGET_SCREEN_WIDTH := 1200
TARGET_SCREEN_HEIGHT := 1920