# ==============================================
# ZYBPAD ZPD1321 (tb8786p1_64_k510_wifi) TWRP配置
# 基于fastboot getvar all真实数据
# 传统A/B分区，Android 12，vendor_boot架构
# ==============================================

# 基础架构配置
DEVICE_PATH := device/zyb/tb8786p1_64_k510_wifi
TARGET_DEVICE := tb8786p1_64_k510_wifi
TARGET_BOARD_PLATFORM := mt6768
PLATFORM_VERSION := 12.0.0

# 架构
TARGET_ARCH := arm64
TARGET_ARCH_VARIANT := armv8-a
TARGET_CPU_ABI := arm64-v8a
TARGET_CPU_ABI2 :=
TARGET_CPU_VARIANT := generic
TARGET_CPU_VARIANT_RUNTIME := cortex-a73

TARGET_2ND_ARCH := arm
TARGET_2ND_ARCH_VARIANT := armv8-a
TARGET_2ND_CPU_ABI := armeabi-v7a
TARGET_2ND_CPU_ABI2 := armeabi
TARGET_2ND_CPU_VARIANT := generic
TARGET_2ND_CPU_VARIANT_RUNTIME := cortex-a53

# Bootloader
TARGET_BOOTLOADER_BOARD_NAME := tb8786p1_64_k510_wifi
TARGET_NO_BOOTLOADER := true

# 允许缺失依赖（首次编译必须）
ALLOW_MISSING_DEPENDENCIES := true

# 分区大小（精确匹配fastboot输出）
BOARD_BOOTIMAGE_PARTITION_SIZE := 33554432        # 32MB (0x2000000)
BOARD_VENDOR_BOOTIMAGE_PARTITION_SIZE := 67108864 # 64MB (0x4000000)
BOARD_DTBOIMG_PARTITION_SIZE := 8388608           # 8MB (0x800000)
BOARD_RECOVERYIMAGE_PARTITION_SIZE := 67108864    # vendor_boot大小
BOARD_USERDATAIMAGE_PARTITION_SIZE := 238418575360 # 222GB (0x37814F8000)
BOARD_SUPER_PARTITION_SIZE := 10737418240         # 10GB (0x280000000)

# 动态分区配置（传统A/B）
BOARD_SUPER_PARTITION_GROUPS := main
BOARD_MAIN_SIZE := 10737418240
BOARD_MAIN_PARTITION_LIST := system vendor product system_ext

# A/B分区支持（传统A/B，非虚拟）
AB_OTA_UPDATER := true
BOARD_USES_VIRTUAL_AB := false
BOARD_USES_RECOVERY_AS_BOOT := true

# 内核配置
BOARD_KERNEL_BASE := 0x40078000
BOARD_KERNEL_OFFSET := 0x00008000
BOARD_RAMDISK_OFFSET := 0x11000000
BOARD_KERNEL_TAGS_OFFSET := 0x13f00000
BOARD_KERNEL_PAGESIZE := 4096
BOARD_KERNEL_CMDLINE := bootopt=64S3,32N2,64N2 androidboot.selinux=permissive buildvariant=user
BOARD_BOOTIMG_HEADER_VERSION := 4
BOARD_MKBOOTIMG_ARGS := \
    --header_version $(BOARD_BOOTIMG_HEADER_VERSION) \
    --kernel_offset $(BOARD_KERNEL_OFFSET) \
    --ramdisk_offset $(BOARD_RAMDISK_OFFSET) \
    --tags_offset $(BOARD_KERNEL_TAGS_OFFSET) \
    --dtb $(DEVICE_PATH)/dtb/mt6768.dtb

BOARD_KERNEL_IMAGE_NAME := Image.gz-dtb

# 预编译内核方案
TARGET_FORCE_PREBUILT_KERNEL := true
TARGET_PREBUILT_KERNEL := $(DEVICE_PATH)/prebuilt/Image.gz-dtb
TARGET_PREBUILT_DTB := $(DEVICE_PATH)/dtb/mt6768.dtb
BOARD_INCLUDE_DTB_IN_BOOTIMG := true

# 文件系统
BOARD_HAS_LARGE_FILESYSTEM := true
BOARD_USERDATAIMAGE_FILE_SYSTEM_TYPE := f2fs
BOARD_SYSTEMIMAGE_FILE_SYSTEM_TYPE := ext4
BOARD_VENDORIMAGE_FILE_SYSTEM_TYPE := ext4
BOARD_PRODUCTIMAGE_FILE_SYSTEM_TYPE := ext4
BOARD_SYSTEM_EXTIMAGE_FILE_SYSTEM_TYPE := ext4

TARGET_COPY_OUT_VENDOR := vendor
TARGET_COPY_OUT_PRODUCT := product
TARGET_COPY_OUT_SYSTEM_EXT := system_ext

TARGET_USERIMAGES_USE_EXT4 := true
TARGET_USERIMAGES_USE_F2FS := true

# VENDOR_BOOT配置（Android 12+核心） - 关键修复部分
BOARD_INCLUDE_RECOVERY_RAMDISK_IN_VENDOR_BOOT := true
BOARD_BUILD_VENDOR_BOOT_IMAGE := true
BOARD_MOVE_RECOVERY_RESOURCES_TO_VENDOR_BOOT := true
BOARD_VENDOR_RAMDISK_USES_LZ4 := true
BOARD_USES_RECOVERY_AS_BOOT := true
TARGET_NO_RECOVERY := true

# 关键修复：告诉编译系统我们确实要构建vendor_boot (使用新变量替代过时的TARGET_NO_VENDOR_BOOT)
PRODUCT_BUILD_VENDOR_BOOT_IMAGE := true
BOARD_EXCLUDE_KERNEL_FROM_RECOVERY_IMAGE := true

# AVB（设备已解锁）
BOARD_AVB_ENABLE := false
BOARD_AVB_MAKE_VBMETA_IMAGE := false

# MTK特定
BOARD_HAS_MTK_HARDWARE := true
MTK_PLATFORM := mt6768

# Recovery配置
TARGET_RECOVERY_PIXEL_FORMAT := RGBX_8888
TARGET_RECOVERY_FSTAB := $(DEVICE_PATH)/recovery.fstab
RECOVERY_SDCARD_ON_DATA := true
BOARD_SUPPORTS_FLASH_FROM_STORAGE := true
BOARD_RECOVERY_SWIPE := true
BOARD_HAS_NO_SELECT_BUTTON := true

# TWRP界面配置
TW_THEME := portrait_hdpi
TW_EXTRA_LANGUAGES := true
TW_DEFAULT_LANGUAGE := zh_CN
TW_SCREEN_BLANK_ON_BOOT := true
TW_MAX_BRIGHTNESS := 255
TW_DEFAULT_BRIGHTNESS := 150
TW_BRIGHTNESS_PATH := "/sys/class/leds/lcd-backlight/brightness"
TW_INPUT_BLACKLIST := "hbtp_vm"
TW_USE_TOOLBOX := true
TW_INCLUDE_REPACKTOOLS := true

# 功能支持
TW_INCLUDE_FUSE_EXFAT := true
TW_INCLUDE_FUSE_NTFS := true
TW_INCLUDE_CRYPTO := true
TW_INCLUDE_CRYPTO_FBE := true
TW_INCLUDE_RESETPROP := true
TW_EXCLUDE_DEFAULT_USB_INIT := true
TW_INCLUDE_NTFS_3G := true
TW_INCLUDE_LIBRESETPROP := true

# 调试
TARGET_USES_LOGD := true
TWRP_INCLUDE_LOGCAT := true

# 安全补丁规避
PLATFORM_SECURITY_PATCH := 2099-12-31
VENDOR_SECURITY_PATCH := 2099-12-31

# 额外修复
BOARD_BOOT_HEADER_VERSION := 4
BOARD_VENDOR_BOOT_HEADER_VERSION := 4